# Upstream Ollama connection
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_API_KEY=your_ollama_api_key_here
# openai (ollama cloud/openai-compatible) or native (local ollama /api/chat)
OLLAMA_API_STYLE=openai
OLLAMA_TIMEOUT_SEC=90
OLLAMA_VERIFY_TLS=true

# Wrapper protection (optional)
OCW_API_TOKEN=

# UI -> backend URL
OCW_BACKEND_URL=http://127.0.0.1:5001
DEFAULT_MODEL=gpt-oss:20b

# Upload / context settings
MAX_UPLOAD_MB=20
MAX_DOC_CONTEXT_CHARS=10000
MAX_DOC_CHUNKS=4

# Retry / circuit breaker
OCW_RETRY_ATTEMPTS=2
OCW_RETRY_BASE_DELAY=0.5
OCW_BREAKER_THRESHOLD=5
OCW_BREAKER_COOLDOWN_SEC=30

# Local server binding
HOST=0.0.0.0
PORT=5001
