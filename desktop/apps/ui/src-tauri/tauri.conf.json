{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OCW Assistant",
  "version": "0.1.0",
  "identifier": "com.saicd.ocwassistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "OCW Assistant",
        "width": 1440,
        "height": 920,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi"],
    "icon": []
  }
}
